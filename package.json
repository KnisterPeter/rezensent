{
  "name": "rezensent",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:KnisterPeter/rezensent.git",
  "author": "Markus Wolf <mail@markus-wolf.de>",
  "license": "MIT",
  "engines": {
    "node": "14.16.1"
  },
  "volta": {
    "node": "14.16.1"
  },
  "scripts": {
    "start": "LANG=C ts-node-transpile-only ./src/node",
    "check": "tsc",
    "check:watch": "tsc --watch",
    "test": "LANG=C jest",
    "test:info": "TERM=dumb LOG_LEVEL=info yarn test --colors --runInBand",
    "test:debug": "TERM=dumb LOG_LEVEL=debug yarn test --colors --runInBand",
    "test:verbose": "TERM=dumb DEBUG=simple-git LOG_LEVEL=debug yarn test --colors --runInBand"
  },
  "dependencies": {
    "@octokit/types": "^6.12.2",
    "@octokit/webhooks": "7.21.0",
    "fastify": "^3.13.0",
    "js-yaml": "^4.0.0",
    "middie": "^5.2.0",
    "probot": "^11.1.0",
    "simple-git": "^2.36.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/common-tags": "1.8.0",
    "@types/eventsource": "1.1.5",
    "@types/jest": "26.0.22",
    "@types/js-yaml": "4.0.0",
    "@types/slice-ansi": "4.0.0",
    "chalk": "4.1.0",
    "common-tags": "1.8.0",
    "dotenv": "8.2.0",
    "esbuild": "0.11.6",
    "esbuild-jest": "0.5.0",
    "jest": "26.6.3",
    "slice-ansi": "4.0.0",
    "smee-client": "1.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  }
}
